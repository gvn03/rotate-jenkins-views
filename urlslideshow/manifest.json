{
    "name": "Rotate Jenkins Views",
    "author": "gvn03",
    "homepage_url": "https://github.com/gvn03/rotate-jenkins-views",

    "version": "0.1.0",
    "manifest_version": 3,

    "icons": {
           "16": "icons/slideshow-24.png",
           "48": "icons/slideshow-48.png",
          "128": "icons/slideshow-128.png"
    },

    "action": {
        "default_icon": {
            "19": "icons/slideshow-24.png",
            "38": "icons/slideshow-48.png"
        },
        "default_title": "Start/Stop the show..."
    },

    "options_ui": {
        "page": "html/options.html"
    },

    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "storage",
        "scripting",
        "notifications"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
